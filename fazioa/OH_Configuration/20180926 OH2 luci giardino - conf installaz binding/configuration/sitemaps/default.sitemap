				Chart item=Grafico_Sonoff_FrigoMicroonde period=4h refresh=60000 visibility=[Chart_Period==0, Chart_Period=="Uninitialized"]  
				Chart item=Grafico_Sonoff_FrigoMicroonde period=D refresh=60000 visibility=[Chart_Period==1]  
                Chart item=Grafico_Sonoff_FrigoMicroonde period=3D refresh=60000 visibility=[Chart_Period==2]  
