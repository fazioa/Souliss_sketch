            Switch item=Chart_Period label="Umidità Soggiorno" mappings=[0="8 Hours", 1= "1 Day", 2="3 Days", 3="Week", 4="Month"] 
				Chart item=termostatosoggiorno_umidita period=8h refresh=6000 visibility=[Chart_Period==0, Chart_Period=="Uninitialized"]  
				Chart item=termostatosoggiorno_umidita period=D refresh=30000 visibility=[Chart_Period==1]  
