				Chart item=Grafico_temperatura_rele_pannelli period=3D refresh=21600000 visibility=[Chart_Period==2]  
				Chart item=Grafico_temperatura_rele_pannelli period=W refresh=21600000 visibility=[Chart_Period==3]  
                Chart item=Grafico_temperatura_rele_pannelli period=M refresh=21600000 visibility=[Chart_Period==4]  

