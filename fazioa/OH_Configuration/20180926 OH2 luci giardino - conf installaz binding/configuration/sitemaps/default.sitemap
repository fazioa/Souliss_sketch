	Switch item=Chart_Period label="" mappings=[0="4 Hours", 1= "1 Day", 2="3 Days", 3="Week", 4="Month"] 
				Chart item=Grafico_energia period=4h refresh=6000 visibility=[Chart_Period==0, Chart_Period=="Uninitialized"]  
				Chart item=Grafico_energia period=D refresh=30000 visibility=[Chart_Period==1]  
				Chart item=Grafico_energia period=3D refresh=21600000 visibility=[Chart_Period==2]  
				Chart item=Grafico_energia period=W refresh=21600000 visibility=[Chart_Period==3]  
