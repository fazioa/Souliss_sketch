				Chart item=termostatosoggiorno_umidita period=M refresh=21600000 visibility=[Chart_Period==4]  
            }
        }

		Text label="Termostato soggiorno" icon="temperature" {
            Setpoint item=termostatosoggiorno_setpoint step=0.5 minValue=10 maxValue=30
            Default item=termostatosoggiorno_temperatura
            Default item=termostatosoggiorno_umidita
            Switch item=termostatosoggiorno_setasmeasured mappings=[ON="Set"]
            Switch item=termostatosoggiorno_modo label="Power On" mappings=[HEATING_MODE="Set"] 
            Switch item=termostatosoggiorno_modo label="Power Off" mappings=[POWEREDOFF_MODE="Set"] 
            Text item=termostatosoggiorno_stato label="Stato [%s]"
			Text item=termostatoSoggiorno_aggiornamento label="Aggiornato: [%1$td.%1$tm.%1$tY %1$tk:%1$tM:%1$tS]" icon="icon16x16"
            Default item=termostatoSoggiorno_healty
            Slider item=termostatoSoggiorno_displayBright
		}	
    
Text label="Termocamino / Solare" icon="temperature" {
     Default item=termocaminoBoilerSolare_temperaturaBoilerSolare
            Default item=termocaminoBoilerSolare_temperaturaTermocamino
            Text item=termocaminoBoilerSolare_aggiornamento label="Aggiornato: [%1$td.%1$tm.%1$tY %1$tk:%1$tM:%1$tS]" icon="icon16x16"

            Text label="Impostazioni" icon="settings"  {
			Setpoint item=termocaminoBoilerSolare_Allarme_Termocamino_SetPoint step=1 minValue=5 maxValue=90
			Switch item=termocaminoBoilerSolare_setasmeasured label="Set Temp. attuale" mappings=[ON="Set"]
			Switch item=termocaminoBoilerSolare_setpoint65 label="Set 65 °C" mappings=[ON="Set"]
			Switch item=termocaminoBoilerSolare_setpoint70 label="Set 70 °C" mappings=[ON="Set"]
			Switch item=termocaminoBoilerSolare_setpoint80 label="Set 80 °C" mappings=[ON="Set"]
            Switch item=termocaminoBoilerSolare_SwitchAcquaTermocamino mappings=[ON="Termocamino", OFF="Solare"]
            Switch item=termocaminoBoilerSolare_Boiler_TC_Automode
            Text item=termocaminoBoilerSolare_aggiornamento label="Aggiornato: [%1$td.%1$tm.%1$tY %1$tk:%1$tM:%1$tS]" icon="icon16x16"
		}
          
         
        Switch item=Chart_Period label="Termocamino / Solare" mappings=[0="4 Hours", 1= "1 Day", 2="3 Days", 3="Week", 4="Month"] 
				Chart item=Grafico_temperatura_acqua period=4h refresh=60000 visibility=[Chart_Period==0, Chart_Period=="Uninitialized"]  
				Chart item=Grafico_temperatura_acqua period=D refresh=60000 visibility=[Chart_Period==1]  
                Chart item=Grafico_temperatura_acqua period=3D refresh=60000 visibility=[Chart_Period==2]  
				Chart item=Grafico_temperatura_acqua period=W refresh=21600000 visibility=[Chart_Period==3]  
				Chart item=Grafico_temperatura_acqua period=M refresh=21600000 visibility=[Chart_Period==4]  
                  
}
